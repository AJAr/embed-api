{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "src/**/*.d.ts",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
  ]
}
